#:set bg_color (0.25, 0.68, 0.965, 1)

<CreateAccountWindow>:
    name: "create"

    canvas:
        Color:
            rgba: bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.4, 0.15
                pos_hint: {"x":0.3, "top":0.95}
                font_size: (min(root.width, root.height)/10)**(0.8)

            Label:
                size_hint: 0.35, 0.1
                pos_hint: {"x":0.1, "top":0.78}
                text: "Name: "
                font_size: (min(root.width, root.height)/14)**(0.8)

            TextInput:
                id: namee
                size_hint: 0.4, 0.06
                pos_hint: {"x":0.45, "top":0.76}
                multiline: False
                font_size: (min(root.width, root.height)/14)**(0.8)
                on_text_validate: root.ids.email.focus = True

            Label:
                size_hint: 0.35, 0.1
                pos_hint: {"x":0.1, "top":0.65}
                text: "Email: "
                font_size: (min(root.width, root.height)/14)**(0.8)

            TextInput:
                id: email
                pos_hint: {"x":0.45, "top":0.63}
                size_hint: 0.4, 0.06
                multiline: False
                font_size: (min(root.width, root.height)/14)**(0.8)
                on_text_validate: root.ids.passw.focus = True

            Label:
                size_hint: 0.35, 0.1
                pos_hint: {"x":0.1, "top":0.52}
                text: "Password: "
                font_size: (min(root.width, root.height)/14)**(0.8)

            TextInput:
                id: passw
                pos_hint: {"x":0.45, "top":0.5}
                size_hint: 0.4, 0.06
                multiline: False
                password: True
                font_size: (min(root.width, root.height)/14)**(0.8)
                on_text_validate: root.submit()

        Button:
            pos_hint:{"x":0.3,"y":0.1}
            size_hint: 0.4, 0.1
            font_size: (min(root.width, root.height)/18)**(0.8)
            text: "Already have an Account?\nLog In"
            halign: "center"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.22}
            size_hint: 0.6, 0.12
            text: "Submit"
            font_size: (min(root.width, root.height)/10)**(0.8)
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

